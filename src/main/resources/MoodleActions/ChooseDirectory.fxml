<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<GridPane prefWidth="420" alignment="BASELINE_LEFT" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChooseDirectoryController">
   <Label text="Choose Location">
      <font>
         <Font size="30.0" />
      </font></Label>
   <Button text="Select directory" onAction="#openDirectoryChooser" GridPane.rowIndex="1" />
   <Label fx:id="directoryChosen" text="No Directory selected" GridPane.rowIndex="2" />
   <Button fx:id="nextScene" onAction="#nextScene" disable="true" text="Next" GridPane.rowIndex="3" />
</GridPane>